<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv_articulos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="123dp"
        android:layout_height="117dp"
        android:background="#331DE9B6"
        app:layout_constraintBottom_toBottomOf="@+id/ivarticulos2"
        app:layout_constraintEnd_toEndOf="@+id/tvArticulo"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/tvArticulo"
        app:layout_constraintTop_toBottomOf="@+id/relleno"
        app:layout_constraintVertical_bias="0.066" />

    <ImageView
        android:id="@+id/ivarticulos2"
        android:layout_width="100dp"
        android:layout_height="69dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/tvArticulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvArticulo"
        app:layout_constraintTop_toTopOf="@+id/tvArticulo"
        app:srcCompat="@drawable/ic_baseline_photo_size_select_actual_24" />

    <TextView
        android:id="@+id/relleno"
        android:layout_width="422dp"
        android:layout_height="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvArticulo"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:background="#00393939"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="1"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relleno" />

</androidx.constraintlayout.widget.ConstraintLayout>